@model IEnumerable<OSEntitiesLib.Products>

@{
    ViewBag.Title = "GetProductsByCategoryName";
}

<div align="center" style="background-color:palegreen;color:white">
    <h1>@Html.ActionLink("Online Shopping", "Index")</h1><br />
    <form method="post" action="GetProductsByName">
        <center>
            @*<img width="50" height="50" src="~/images/cart.jpg"/>*@
            <input type="text" name="productname" placeholder="Search products" width="200" />
            <input type="submit" value="search" /><br />
        </center>
    </form>
</div>
<div align="center" style="background-color: papayawhip;color: black">
    <table class="table">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Picture) :
                
                
                    <a href="GetProductDetailsById?id=@item.ProductId">
                        <img src="~/images/@item.Picture" width="100" height="100" />
                    </a>

                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Price) :
                
                
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
            </tr>

        }</br>

    </table>
    </div>
   