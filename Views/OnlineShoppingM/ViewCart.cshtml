@model IEnumerable<OSEntitiesLib.Products>

@{
    ViewBag.Title = "ViewCart";
}

<div align="center" style="background-color:antiquewhite">
    <h2 style="color:crimson"> Cart Items</h2>
   
</div>

<p>
    @Html.ActionLink("Home", "Index")
</p>
@if (ViewBag.Message == "")
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Content)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            <img src="~/images/@item.Picture" width="200",height="200"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>*@
        <td>
            @Html.ActionLink("Delete","DeleteFromCart",new { id = item.ProductId })

        </td>
        <td>
            @Html.ActionLink("Order Now","OrderNow")
        </td>
    </tr>
}

</table>
}
else
{
    <h1>@ViewBag.Message</h1>
}
